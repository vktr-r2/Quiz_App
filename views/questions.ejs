<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%- include('./partials/_head') %>

  <link rel="stylesheet" href="/styles/main.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>

  <title>Questions</title>
</head>
<body>
  <header>
    <%- include('./partials/_header') %>
  </header>
  <main>
    <section class="questions">
      <h2><%= question.name %></h2>
      <form id="quiz-submit" method="POST" action="<% `/${question.quiz_id}?qNum=${question.question_number}` %>">
        <div class="qNumber"><%= `Question ${question.question_number}` %></div>
        <div class="question"><%= question.question %></div>
        <div class="answers">
          <% answers.forEach(answer => { %>
            <% if(question.id === answer.question_id) { %>
              <input type="radio" id="answer" name="answer" value="<%= answer.is_correct %>" required>
              <label for="answer.answer"><%= answer.answer %></label>
              <br>
            <% } %>
          <% }) %>
        </div>
        <!-- <input class="previous" type="submit" value="Previous" /> -->
        <% if(question.question_number !== 5){ %>
          <input type="number" name="nextQ" value="<%= question.question_number + 1 %>" hidden>
          <input class="next" type="submit" value="Next" />
        <% } else{ %>
          <input class="submit" type="submit" value="Submit" />
       <% } %>      
      </form>    
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
